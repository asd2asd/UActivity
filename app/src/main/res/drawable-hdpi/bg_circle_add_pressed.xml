<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:left="3dp"
        android:top="6dp">
        <shape android:shape="oval" >
            <gradient
                android:type="radial"
                android:gradientRadius="@dimen/gradientRadius"
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="270"
                android:centerColor="@color/black"
                android:endColor="#00000000"/>
        </shape>
    </item>
    <!-- outer circle -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <solid android:color="@color/blue" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->
    <item
        android:bottom="34dp"
        android:left="20dp"
        android:right="20dp"
        android:top="34dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- inner shadow of outer circle -->
    <item
        android:bottom="20dp"
        android:left="34dp"
        android:right="34dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
