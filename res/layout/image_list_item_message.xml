<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  
    android:orientation="horizontal"  
    android:padding="5dip">
  
    <!--  ListView最左边的缩略图 -->  
    <LinearLayout android:id="@+id/thumbnail"   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:padding="3dip"        
        android:layout_alignParentLeft="true"  
        android:layout_marginRight="5dip">  
          
        <com.example.uactivity.view.CustomImageView
            android:id="@+id/activity_custom_imageA"
            android:layout_width="50dip"  
            android:layout_height="50dip"/>

          
    </LinearLayout>  
      
    <!-- 歌曲名-->  
    <TextView  
        android:id="@+id/activity_custom_titleA"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignTop="@+id/thumbnail"  
        android:layout_toRightOf="@+id/thumbnail"  
        android:textColor="#040404"  
        android:typeface="sans"   
        android:textSize="15dip"  
        android:textStyle="bold"/>  
  
    <!-- 歌手名 -->  
    <TextView  
        android:id="@+id/activity_custom_descriptionA"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/activity_custom_titleA"
        android:textColor="#343434"  
        android:textSize="10dip"  
        android:layout_marginTop="1dip"  
        android:layout_toRightOf="@+id/thumbnail"  />
    <!-- 歌曲播放时间 -->  
    <TextView  
        android:id="@+id/activity_custom_timeA"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"  
        android:layout_alignTop="@id/activity_custom_titleA"
        android:gravity="right"  
        android:layout_marginRight="5dip"  
        android:textSize="10dip"  
        android:textColor="#10bcc9"  
        android:textStyle="bold"/>  
          
</RelativeLayout>
