<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="fill_parent"
    android:background="@drawable/register1_back">

	<LinearLayout android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

		<LinearLayout
			android:orientation="vertical" android:layout_width="313dp"
			android:layout_height="250dp"
            android:background="@drawable/register1_input"
            android:layout_weight="4.93">

			<LinearLayout android:id="@+id/LinearLayout05"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
		
				<TextView android:id="@+id/textViewEmail" android:text="电子邮件 :  "
					android:textColor="@color/gray" android:layout_height="wrap_content"
					android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/contentFontTextSize">
				</TextView>

				<EditText android:id="@+id/editTextEmail"
					android:layout_width="190dip" android:layout_height="52dp"
                    android:background="@null">
				</EditText>

			</LinearLayout>
		    
			<ImageView android:layout_height="2dip" android:layout_width="fill_parent"
				android:background="@drawable/input_division"
                android:layout_gravity="center" />

			<LinearLayout android:id="@+id/LinearLayout03"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView android:id="@+id/textViewPwdReg1" android:text="密　　 码:  "
					android:textColor="@color/gray" android:layout_height="wrap_content"
					android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/contentFontTextSize">
				</TextView>

				<EditText android:id="@+id/editTextPwdReg1"
					android:layout_width="190dip" android:layout_height="52dp"
					android:password="true"
                    android:background="@null">
				</EditText>

			</LinearLayout>

			<ImageView android:layout_height="2dip" android:layout_width="fill_parent"
				android:background="@drawable/input_division"
                android:layout_gravity="center" />

			<LinearLayout android:id="@+id/LinearLayout04"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView android:id="@+id/textViewPwdConfirm" android:text="确认密码 :  "
					android:textColor="@color/gray" android:layout_height="wrap_content"
					android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/contentFontTextSize">
				</TextView>

				<EditText android:id="@+id/editTextPwdConfirm"
					android:layout_width="190dip" android:layout_height="52dp"
					android:password="true"
                    android:background="@null">
				</EditText>

			</LinearLayout>


			<ImageView android:layout_height="2dip" android:layout_width="fill_parent"
				android:background="@drawable/input_division"
                android:layout_gravity="center" />
			
			<LinearLayout android:id="@+id/LinearLayout06"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			
			    <TextView android:id="@+id/textViewVname" android:text="昵　　 称:  "
					android:textColor="@color/gray" android:layout_height="wrap_content"
					android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/contentFontTextSize">
				</TextView>
				
				<EditText android:id="@+id/editTextVname"
					android:layout_width="190dip" android:layout_height="52dp"
                    android:background="@null">
				</EditText>

			</LinearLayout>

			<ImageView android:layout_height="2dip" android:layout_width="fill_parent"
					android:background="@drawable/input_division"
                android:layout_gravity="center"
                android:visibility="invisible" />



		</LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
        <Button
            android:id="@+id/buttonReg1Next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="确认"
            android:background="@drawable/rectangle_button_circle_blue"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:clickable="false" />


        </LinearLayout>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>
